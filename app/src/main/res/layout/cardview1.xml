<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#F1E5C8"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/img"
            android:text="Manikandan"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/experiance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginStart="20dp"
            android:textColor="#530000"
            android:layout_toRightOf="@+id/img"
            android:text="Worked at King Tv" />

        <TextView
            android:id="@+id/workedshows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/experiance"
            android:textColor="#B60000"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/img"
            android:text="20 Shows" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>